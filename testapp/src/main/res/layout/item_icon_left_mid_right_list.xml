<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="108dp"
    android:layout_width="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:paddingBottom="12dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp">

        <TextView
            android:id="@+id/tv_time_list"
            android:layout_alignParentStart="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2016-10-10"
            android:textSize="16sp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="5dp"/>

        <LinearLayout
            android:layout_below="@id/tv_time_list"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_alignParentLeft="true">

            <ImageView
                android:id="@+id/iv_left_list_ic"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/icon_heart" />

            <TextView
                android:id="@+id/tv_left_list_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="智能手环"
                android:textSize="@dimen/person_info_item_title" />

        </LinearLayout>

        <LinearLayout
            android:layout_below="@id/tv_time_list"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_mid_list_ic"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/icon_oxy" />

            <TextView
                android:id="@+id/tv_mid_list_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="智能手环"
                android:textSize="@dimen/person_info_item_title" />

        </LinearLayout>

        <LinearLayout
            android:layout_below="@id/tv_time_list"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_alignParentRight="true">

            <ImageView
                android:id="@+id/iv_right_list_ic"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/icon_tem" />

            <TextView
                android:id="@+id/tv_right_list_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="智能手环"
                android:textSize="@dimen/person_info_item_title" />

        </LinearLayout>

    </RelativeLayout>
</LinearLayout>
