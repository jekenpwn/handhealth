<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:hyman="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

        <!--显示内容-->
        <android.support.v4.view.ViewPager
            android:id="@+id/main_viewPager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <!--TabBottom-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/bg_main_tab"
            android:orientation="horizontal">

                <jeken.com.handhealth.uiview.Main_TabBottom
                    android:id="@+id/tb_main_tab_measure"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="5dp"
                    hyman:tab_color="@color/color_space_studytools_red"
                    hyman:tab_icon="@drawable/ic_tabbottom_heart"
                    hyman:tab_text="@string/main_tab_measure"
                    hyman:tab_text_size="12sp" />

                <jeken.com.handhealth.uiview.Main_TabBottom
                    android:id="@+id/tb_main_tab_step"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="5dp"
                    hyman:tab_color="@color/colorGreenPrimary"
                    hyman:tab_icon="@drawable/ic_tabbottom_step"
                    hyman:tab_text="@string/main_tab_step"
                    hyman:tab_text_size="12sp" />

                <jeken.com.handhealth.uiview.Main_TabBottom
                    android:id="@+id/tb_main_tab_me"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="5dp"
                    hyman:tab_color="@color/colorPrimary"
                    hyman:tab_icon="@drawable/ic_tabbottom_me"
                    hyman:tab_text="@string/main_tab_me"
                    hyman:tab_text_size="12sp" />

        </LinearLayout>

</LinearLayout>